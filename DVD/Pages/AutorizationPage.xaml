<Page x:Class="DVD.Pages.AutorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DVD.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutorizationPage" Background="#fabbb8" >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Zaya DVD Shop" FontSize="40" FontFamily="Impact" Grid.Column="1" Grid.ColumnSpan="3" Margin="10" Foreground="#952325" TextAlignment="Center"  />
        <TextBlock Text="Авторизация" FontSize="30" FontFamily="Impact" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="1" Margin="10" Foreground="LightCyan" TextAlignment="Center"  />
        <TextBlock Text="Логин:" FontSize="30" Grid.Column="1" FontFamily="Impact"  Grid.Row="2" Margin="10 20 0 0" Foreground="LightCyan" TextAlignment="Center"  />
        <TextBlock Text="Пароль:" FontSize="30" Grid.Column="1" FontFamily="Impact" Grid.Row="3" Margin="10 20 0 0 " Foreground="LightCyan" TextAlignment="Center"  />
        <TextBox x:Name="Logintxb" FontSize="40" Grid.Column="2" Grid.ColumnSpan="2" Margin="10,10,10,10" Grid.Row="2"  TextAlignment="Center" Height="50"  />
        <PasswordBox x:Name="Parolpsw" FontSize="40" Grid.Column="2" Grid.ColumnSpan="2" Margin="10,10,10,10" Grid.Row="3"  Height="50"  />
        <Button x:Name="Vhodbtn" Content="Войти" FontSize="20" FontFamily="Impact" Grid.Column="2"  Margin="10,10,10,10" Grid.Row="4"  Height="50" Click="Vhodbtn_Click" Background="LightGray" />
        <Button x:Name="Regesrtbtn" Content="Зарегистрироваться" FontSize="20" FontFamily="Impact" Grid.Column="3" Grid.ColumnSpan="2"  Margin="10,10,10,10" Grid.Row="4"  Height="50" Width="200" Click="Regesrtbtn_Click" Background="LightGray"  />
        <Image Source="/Resourse/ico.png.ico" Width="200" Grid.ColumnSpan="2" Grid.RowSpan="2"/>

    </Grid>
</Page>
